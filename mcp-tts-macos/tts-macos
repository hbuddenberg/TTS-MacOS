#!/usr/bin/env python3
"""
TTS macOS - Wrapper para el CLI con detecci√≥n din√°mica de voces
Este script act√∫a como un punto de entrada que ejecuta el CLI real
desde el paquete src/tts_macos/cli.py
"""

import sys
import os
from pathlib import Path

# Agregar el directorio src al path para poder importar el CLI
script_dir = Path(__file__).parent
src_dir = script_dir / "src"
sys.path.insert(0, str(src_dir))

try:
    # Importar y ejecutar el CLI real
    from tts_macos.cli import main

    if __name__ == "__main__":
        sys.exit(main())

except ImportError as e:
    print(f"‚ùå Error al importar el CLI: {e}", file=sys.stderr)
    print("üìç Aseg√∫rate de que el directorio src/ est√° presente y contiene el m√≥dulo tts_macos", file=sys.stderr)
    sys.exit(1)
except Exception as e:
    print(f"‚ùå Error ejecutando tts-macos: {e}", file=sys.stderr)
    sys.exit(1)
